<h1>The World Travel App!</h1>
<h2>Create some travelers:</h2>
<%= link_to "Your travelers", :travelers %>
<h2>Create your countries:</h2>
<%= link_to "Your countries", :countries %>
<br>
<br>
<br>
<h2>Visits you've created!</h2>
<table>
  <tr>
    <th>Traveler</th>
    <th>Country</th>
    <th>Arrival</th>
    <th>Departure</th>
    <th>Reason</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @visits.each do |visit| %>
  <tr>
    <td><%= link_to visit.traveler.name, traveler_path(visit.traveler) %></td>
    <td><%= link_to visit.country.name, country_path(visit.country) %></td>
    <td><%= visit.arrival %></td>
    <td><%= visit.departure %></td>
    <td><%= visit.reason %></td>
    <td><%= link_to 'Show', visit %></td>
    <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
    <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Visit', new_visit_path %>
